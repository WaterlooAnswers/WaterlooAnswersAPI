<!DOCTYPE html>
<html>
<head>
	<title>Hey</title>
	<link href="/stylesheets/bootstrap.css" rel="stylesheet">
</head>
<body>

<% include navbar-loggedin %>

<div class="container col-md-8 col-md-offset-2">

	<div class="panel panel-default ">
		<div class="panel-heading text-center panel-title"><h1><%= user.firstName %></h1></div>
		<div class="panel-body">

			<div>
				<ul><b>Email: </b><%= user.email %>
					<br></ul>
				<ul><b>Joined: </b><abbr class="timeago" title="<%= user.dateCreated.toISOString() %>"></abbr>
					<br></ul>
				<% if (questions.length != 0) { %>
				<ul><b>Questions asked:</b><br>

					<div style="padding-left: 20px;">
						<% questions.forEach(function(entry){ %>
						<a href="/viewquestion/<%= entry._id %>"><%= entry.name %></a><br>
						<% }); %>
					</div>
				</ul>
				<% } %>
				<% if (answers.length != 0){ %>
				<ul><b>Questions answered:</b><br>

					<div style="padding-left: 20px;">
						<% answers.forEach(function(entry){ %>
						<a href="/viewquestion/<%= entry.question %>"><%= entry.questionName %></a><br>
						<% }); %>

					</div>
				</ul>
				<% } %>
			</div>

		</div>
	</div>
</div>

<script src="http://code.jquery.com/jquery-latest.min.js"></script>
<script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
<script src="/js/jquery.timeago.js" type="text/javascript"></script>
<script>
	jQuery(document).ready(function () {
		jQuery("abbr.timeago").timeago();
	});
</script>
</body>
</html>